				<% @menu_sections.each do |section| %>
				<li><%= link_to section.name, section %></a></li>
				<% end %>
			</ul>
			<div class="menu-right"></div>
		</div>

		<div class="content">
			<div class="sidebar">

				<div class="news">
					<div class="badge"><i>дата</i></div>
				</div>

			</div>
			<div class="main">

				<div class="news">
